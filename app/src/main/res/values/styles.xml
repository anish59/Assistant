    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!--// &lt;!&ndash; Hint color and label color in FALSE state &ndash;&gt;-->
        <item name="android:textColorHint">#FFF</item>
        <item name="android:textSize">20sp</item>
        <!--// &lt;!&ndash; Label color in TRUE state and bar color FALSE and TRUE State &ndash;&gt;-->
        <item name="colorAccent">#FFF</item>
        <item name="colorControlNormal">#fff</item>
        <item name="android:textColor">#fff</item>
        <item name="colorControlActivated">#fff</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="round_edit_text_multiLine" parent="round_edit_text">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">left|top</item>
        <item name="android:lines">16</item>
        <item name="android:maxLines">2</item>
        <item name="android:minLines">4</item>
    </style>

    <style name="big_EditText_10Lines" parent="round_edit_text">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">left|top</item>
        <item name="android:lines">10</item>
    </style>

    <style name="round_edit_text">
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="menuItemsColor" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <!--<item name="actionOverflowButtonStyle">@style/ActionButtonOverflowStyle</item>-->
        <item name="drawerArrowStyle">@android:color/white</item>
    </style>

</resources>
